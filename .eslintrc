{
  "extends": "standard",
  "rules": {
    "camelcase": "off",
    "import/no-extraneous-dependencies": ["warn", {"devDependencies": ["./**/*.spec.js", "./**/gulpfile.js"]}],
    "import/no-dynamic-require": "off",
    "indent": ["error", 2, { "MemberExpression": 0, "SwitchCase": 1 }],
    "operator-linebreak": "off"
  },
  "globals": {
    "describe": true,
    "before": true,
    "after": true,
    "beforeEach": true,
    "afterEach": true,
    "it": true
  }
}
